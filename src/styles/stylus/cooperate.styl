.cooperate-main
  width: 100%;
  height 100%;
  display: flex;
  align-items: center;
  justify-content: center;

  .cooperate-con
    width: 100%;
    max-width: 1200px;
    height calc(100% - 30px);
    background-color: rgba(4, 50, 100, .51);
    border: 1px solid rgba(11, 141, 246, .3);
    padding: 15px;

    .coo-header
      width: 100%;
      height: 36px;
      border-bottom: 1px solid rgba(255, 255, 255, .3);
      display: flex;
      align-items: flex-start;
      & > i 
        display: block;
        width: 4px;
        height: 24px;
        background-color: #299DF2;
        margin-right: 10px;

      & > span 
        font-size: 16px;
        color: rgba(255, 255, 255, .7);

    .coo-body
      width: 100%;
      height calc(100% - 41px);
      padding: 15px;

      .table-con
        width: 100%;
        margin-top: 18px;
        height calc(100% - 50px);

        .ant-table-wrapper
          width: 100%;
          height 100%;

          .op-box
            display: flex;
            .ant-btn[disabled]
              &.feed
                background-color: rgba(255, 107, 39, .4);
                border: 1px solid rgba(255, 107, 39, .4);
                color: rgba(255, 255, 255, .8);
              &.finish
                background-color: rgba(41, 157, 242, .4);
                border: 1px solid rgba(41, 157, 242, .4);
                color: rgba(255, 255, 255, .8);
            & > button
              width: 60px;
              height 24px;
              display: flex;
              align-items: center;
              justify-content: center;
              padding: 0;
              font-szie: 12px;
              background-color: transparent;
              &.receive
                border: 1px solid rgba(255, 255, 255, .8);
                color: rgba(255, 255, 255, .8);
              &.feed
                border: 1px solid rgb(255, 107, 39);
                color: rgb(255, 107, 39);
              &.finish
                border: 1px solid rgb(103, 185, 245);
                color: rgb(103, 185, 245);



.add-coop-modal
  .form-input
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 5px;

    &.area
      display: block;

      & > label 
        line-height 30px;
        display: inline-block;
        width: 100%;

      & > textarea 
        width: 100%;
        height 80px;
        background-color: rgb(6, 36, 86);
        border: 0;
        resize: none;

    & > label 
      width 60px;
      font-size: 12px;
      color: rgba(255, 255, 255, .8);

    & > .ant-input,
    & > .ant-select
      width: calc(100% - 70px);

    .item
      width: calc(50% - 5px);
      display: flex;
      align-items: center;
      justify-content: space-between;
      & > label
        width: 60px;
        font-size: 12px;
        color: rgba(255, 255, 255, .8);

      & > .ant-input
        width: calc(100% - 70px);

